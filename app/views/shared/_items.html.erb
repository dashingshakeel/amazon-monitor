
<h1>Poducts</h1>

<table class="table" id="table">
  <thead>
    <tr>
      <th scope="row">Name</th>
      <th scope="row">Url</th>
      <th scope="row"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.url %></td>
        <% if item.status == "not" %>
       <td><%= form_tag item_path(item), method: :put do -%>
        <%= hidden_field_tag :status, :value => "monitor"-%>
        <%= submit_tag 'Add To monitor',class: "add" -%>
      <%- end -%></td> 
      <% else %>
          <td>-</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
