
<h1>Items</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="row">Name</th>
      <th scope="row">Url</th>
      <th scope="row"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.url %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
